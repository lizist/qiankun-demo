{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost",
      "webworker",
      "ES2020.Promise"
    ],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "preserve",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
